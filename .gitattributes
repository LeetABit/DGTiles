####################################################################
# Attributes definitions
####################################################################
[attr]text              !binary text diff merge
[attr]code              !binary text diff merge=text
[attr]wincode           !binary text eol=crlf diff merge=text
[attr]nixcode           !binary text eol=lf diff merge=text
[attr]binary            -text -diff -merge

####################################################################
# File extensions
####################################################################
.editorconfig           code
.gitattributes          code
.gitignore              code
*.html                  code
*.ico                   binary
*.json                  code
*.lock                  text
*.md                    text
*.mts                   code
*.png                   binary
*.svg                   code
*.txt                   text
*.yml                   code
