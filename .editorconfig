####################################################################
# Editor configuration file
####################################################################

root = true

# Shallow indentation code files
[*.{gitattributes,gitignore,editorconfig,prettierignore,html,json,lock,yaml,svg,md}]
ruler = 80
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Deep indentation code files
[*.{ts,tsx,txt}]
ruler = 80
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Raw code files
[*.patch]
ruler = 80
indent_style = unset
indent_size = unset
charset = utf-8
end_of_line = unset
trim_trailing_whitespace = false
insert_final_newline = false

