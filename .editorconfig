####################################################################
# Editor configuration file
####################################################################
root = true

# Deep indentation code files
[*.{gitattribute,gitignore,editorconfig,md,js,mjs,ts,tsx}]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = urf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Shallow indentation code files
[*.{yml,json,html,css,lock}]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = urf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Raw text files
[*.{txt}]
indent_style = tab
tab_width = 4
end_of_line = crlf
charset = urf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ico,png}]
